<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.control-panel{
			width:600px;
		}
	</ui:style>
	<ui:with type="gov.ca.bdo.modeling.dsm2.map.client.images.IconImages" field="images"></ui:with>
	<g:VerticalPanel styleName="{style.control-panel}">
		<g:HorizontalPanel>
			<g:Label>Study:</g:Label>
			<g:ListBox ui:field="studyBox"></g:ListBox>
		</g:HorizontalPanel>
		<g:DisclosurePanel open="true">
			<g:header>Edit</g:header>
			<g:HorizontalPanel>
				<g:ToggleButton ui:field="saveEditButton">
					<g:upFace image="{images.editIcon}"></g:upFace>
					<g:downFace image="{images.saveIcon}"></g:downFace>
				</g:ToggleButton>
				<g:VerticalPanel>
					<g:ToggleButton ui:field="addButton">
						<g:upFace image="{images.addIcon}"></g:upFace>
					</g:ToggleButton>
					<g:ToggleButton ui:field="deleteButton">
						<g:upFace images="{images.deleteIcon}"></g:upFace>
					</g:ToggleButton>
				</g:VerticalPanel>
				<g:ListBox ui:field="elementTypeBox">
				</g:ListBox>
			</g:HorizontalPanel>
		</g:DisclosurePanel>
		<g:DisclosurePanel open="false">
			<g:header>Download</g:header>
			<g:VerticalPanel>
				<g:Button ui:field="downloadHydroButton">Download Hydro Input</g:Button>
				<g:Button ui:field="downloadGISButton">Download GIS Input</g:Button>
			</g:VerticalPanel>
		</g:DisclosurePanel>
		<g:DisclosurePanel open="false">
			<g:CaptionPanel captionText="GIS Tools">
				<g:HorizontalPanel>
					<g:ToggleButton title="Measure Length">
						<g:upFace images="{images.measureOnIcon}"></g:upFace>
					</g:ToggleButton>
				</g:HorizontalPanel>
			</g:CaptionPanel>
		</g:DisclosurePanel>
	</g:VerticalPanel>
	<g:HTMLPanel>
		Hello,
		<g:Button styleName="{style.important}" ui:field="button" />
	</g:HTMLPanel>
</ui:UiBinder> 