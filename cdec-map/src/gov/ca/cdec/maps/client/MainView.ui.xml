<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:FlowPanel>
		<g:HTMLPanel>
			<h3>CDEC Water Data</h3>
			<p>
				A thin wrapper on
				<a href="http://cdec.water.ca.gov">CDEC</a>
				data.<br/>
			Search using the map and click on icon. Then click on name and the
				data will be displayed below the map.</p>
		</g:HTMLPanel>
		<g:VerticalPanel ui:field="controlPanelContainer"></g:VerticalPanel>
		<g:FlowPanel width="100%" height="600px" ui:field="mapPanelContainer"></g:FlowPanel>
		<g:ScrollPanel>
			<g:FlowPanel ui:field="dataDisplayPanelContainer"></g:FlowPanel>
		</g:ScrollPanel>
	</g:FlowPanel>
	
</ui:UiBinder>